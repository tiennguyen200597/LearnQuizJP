<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_bmquiz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="italic"
                        android:text="Câu 1"/>
                <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="italic"
                        android:text="@string/tv_quizdemo"/>
            </LinearLayout>

            <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            <RadioGroup android:layout_width="match_parent" android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/radGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp">
                <LinearLayout
                        android:id="@+id/ll_answerA"
                        style="@style/MarginQuiz"
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                       >
                    <TextView
                            android:background="@color/siver"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="A"/>
                    <TextView
                            android:background="@color/blacklight"
                            android:layout_weight="9"
                            android:gravity="center"
                            android:id="@+id/tv_answerA"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Trả lời 1"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/ll_answerB"
                        style="@style/MarginQuiz"
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        >
                    <TextView
                            android:background="@color/siver"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:checked="false"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="B"/>
                    <TextView
                            android:background="@color/blacklight"
                            android:layout_weight="9"
                            android:gravity="center"
                            android:id="@+id/tv_answerB"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Trả lời 1"/>

                </LinearLayout>
                <LinearLayout
                        android:id="@+id/ll_answerC"
                        style="@style/MarginQuiz"
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        >
                    <TextView
                            android:background="@color/siver"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:checked="false"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="C"/>
                    <TextView
                            android:background="@color/blacklight"
                            android:layout_weight="9"
                            android:gravity="center"
                            android:id="@+id/tv_answerC"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Trả lời 1"/>

                </LinearLayout>
                <LinearLayout
                        android:id="@+id/ll_answerD"
                        style="@style/MarginQuiz"
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        >
                    <TextView
                            android:background="@color/siver"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:checked="false"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="D"/>
                    <TextView
                            android:background="@color/blacklight"
                            android:layout_weight="9"
                            android:gravity="center"
                            android:id="@+id/tv_answerD"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Trả lời 1"/>

                </LinearLayout>




            </LinearLayout>
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
