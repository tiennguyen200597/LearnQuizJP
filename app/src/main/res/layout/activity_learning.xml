<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.LearningActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EED0DA"
                        android:padding="8dp">

                        <TextView
                                android:text="N5"
                                android:layout_width="20dp"
                                android:layout_marginTop="16dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvN5"
                                android:layout_marginRight="16dp"/>
                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="150dp" app:srcCompat="@drawable/ic_menu_gallery"
                                android:id="@+id/imgN5" android:layout_weight="1"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EED0DA"
                        android:padding="8dp">

                    <TextView
                            android:text="N4"
                            android:layout_width="20dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_height="wrap_content" android:id="@+id/tvN4"/>
                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="150dp" app:srcCompat="@drawable/ic_menu_gallery"
                            android:id="@+id/imgN4" android:layout_weight="1"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:background="#EED0DA">

                    <TextView
                            android:text="N3"
                            android:layout_width="20dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_height="wrap_content" android:id="@+id/tvN3"/>
                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="150dp" app:srcCompat="@drawable/ic_menu_gallery"
                            android:id="@+id/imgN3" android:layout_weight="1"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:background="#EED0DA">

                    <TextView
                            android:text="N2"
                            android:layout_width="20dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_height="wrap_content" android:id="@+id/tvN2"/>
                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="150dp" app:srcCompat="@drawable/ic_menu_gallery"
                            android:id="@+id/imgN2" android:layout_weight="1"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:background="#EED0DA">

                    <TextView
                            android:text="N1"
                            android:layout_width="20dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_height="wrap_content" android:id="@+id/tvN1"/>
                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="150dp" app:srcCompat="@drawable/ic_menu_gallery"
                            android:id="@+id/imgN1" android:layout_weight="1"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
